@model SliderVMForm
@section Header {
    Create 
}
<div class="col-md-8">

    <div class="card card-gray">

        <form asp-controller="Slaiders" asp-action="Create" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label for="BlogTitle">Blog Title </label>
                    <input asp-for="Title" class="form-control">
                </div>
                <div class="form-group">
                    <label for="Image"> </label>
                    <input asp-for="Image" class="form-control-file" />
                </div>

            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-gray">Create</button>
            </div>
        </form>
    </div>

</div>
