@model BlogVMForm
@section Header {
    UPDATE 
}
<div class="col-md-8">

    <div class="card card-gray">

        <form asp-controller="Blogs" asp-action="Edit" enctype="multipart/form-data">
            <div class="card-body">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="NameOfImg" />

                <div class="form-group">
                    <label for="BlogTitle">BlogTitle</label>
                    <input asp-for="BlogTitle" class="form-control" >
                </div>
                <div class="form-group">
                    <label for="Discription">Discription</label>
                    <input asp-for="Discription" class="form-control" >
                </div>
                
                <div class="form-group">
                    <label for="CreatedAt">CreatedAt</label>
                    <input asp-for="CreatedAt" class="form-control">
                </div>
                <div class="form-group">
                    <label for="Image"> </label>
                    <input asp-for="Image" class="form-control-file" />
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-gray">UPDATE</button>
            </div>
        </form>
    </div>

</div>
